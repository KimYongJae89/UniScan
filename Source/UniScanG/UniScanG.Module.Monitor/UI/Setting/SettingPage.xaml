<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:UniScanG.Module.Monitor.UI.Setting"
    xmlns:pt="http://propertytools.org/wpf"
    x:Class="UniScanG.Module.Monitor.UI.Setting.SettingPage"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"   
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    IsVisibleChanged="Page_IsVisibleChanged"
    Title="SettingPage">

    <DockPanel>
        <pt:PropertyGrid 
            SelectedObject="{Binding AdditionalSettings, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Page}}"/>
    </DockPanel>
</Page>
