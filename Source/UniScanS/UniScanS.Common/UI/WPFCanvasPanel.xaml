<UserControl x:Class="UniScanS.Common.UI.WPFCanvasPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UniScanS.Common.UI"
             mc:Ignorable="d"
             Focusable="True">
    <Canvas x:Name="imageCanvas">
        <Grid x:Name="ImageGrid">
            <Image x:Name="image"/>
            <Thumb x:Name="ImageThumb" 
                   Opacity="0" 
                   MouseWheel="ImageThumb_MouseWheel" 
                   DragDelta="ImageThumb_DragDelta" 
                   MouseMove="ImageThumb_MouseMove" 
                   MouseEnter="ImageThumb_MouseEnter" />
        </Grid>
    </Canvas>
</UserControl>
